---
import {StickyHeader, Astronav, MenuItems, MenuIcon} from "astro-navbar";
import Enlace from "./Enlace.astro";
---
<StickyHeader
class="sticky top-0 z-20 transition-all "
scrollY={50}
defaultClass="py-5 border-transparent text-white"
activeClass="py-2 backdrop-blur-lg text-[#000814]">
<header class="lg:flex p-5 px-16  gap-5">
  <Astronav>
    <div class="flex items-center w-full justify-between">
      <Enlace href="#" class="flex items-center">
        <img src="../../logo.svg" class="w-[30px]" alt="">
        <span class="flex items-center text-2xl font-semibold whitespace-nowrap">AstroGym</span>
      </Enlace>
