<footer class="rounded-lg shadow m-4" id="contactanos">
    <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <Enlace href="#" class="flex items-center mb-4 sm:mb-0 text-white">
                <img src="./logo.svg" class="h-8" alt="AstroGym Logo" />
                <span class="self-center text-2xl font-semibold whitespace-nowrap">AstroGym</span>
            </Enlace>
            <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-white sm:mb-0">
                <li>
                    <a href="#" class="hover:underline me-4 md:me-6">About</a>
                </li>
                <li>
                    <a href="#" class="hover:underline me-4 md:me-6">Privacy Policy</a>
                </li>
                <li>
                    <a href="#" class="hover:underline me-4 md:me-6">Licensing</a>
                </li>
                <li>
                    <a href="#contactanos" class="hover:underline">Contact</a>
                </li>
            </ul>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto text-white lg:my-8" />
